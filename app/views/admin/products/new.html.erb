 <%= simple_form_for [:admin, @product] do |f| %>
    <div class="form-group">
      <%= f.input :title, input_html: { class: "form-c
      	ontrol"} %>
      <%= f.input :description, input_html: { class: "form-control"} %>
       <%= f.input :quantity, input_html: { class: "form-control"} %>
      <%= f.input :price, input_html: { class: "form-control"} %>
    </div>
    <% if @photo.image.present? %>
<span>目前商品圖</span> <br>
<%= image_tag(@photo.image.thumb.url) %>
 <% end %>
 <div class="form-group">
  <%= f.simple_fields_for :photo do |c| %>
   <%= c.input :image , as: :file %>
   <% end %>
   </div>

    <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
  <% end %>




